<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <!-- %= form_for(:session, url: sessions_path) do |f| % -->
    <%= form_tag(sessions_path, method: "post" ) do  %>
     <div>
      <label for="session_email">Email</label>
      <input id="session_email" type="text" name="session[<%= :email %>]"/>
     </div>
     <div>
      <label for="session_password">Password</lable>
      <input id="session_password" type="password" name="session[<%= :password %>]"/>
     </div>
     <input name="commit" type="submit" value="Sign in" class="btn btn-large btn-primary"/>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
